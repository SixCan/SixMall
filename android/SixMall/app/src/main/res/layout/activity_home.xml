<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_menu_white"
        android:focusable="true" android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="200dp" android:layout_height="match_parent"
            android:layout_gravity="center" android:layout_margin="14dp"
            android:hint="   Search" android:textColorHint="#BDBDBD"
            android:drawableLeft="@drawable/ic_search_grey"
            android:textCursorDrawable="@color/colorPrimary" android:textColor="#eee"
            android:background="@drawable/bg_search_bar"
            />

        <ImageView
            android:id="@+id/ivCategory"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/ic_category_white"
            android:layout_gravity="right" android:layout_marginRight="20dp"
            />

    </android.support.v7.widget.Toolbar>

    <!-- Solar Menus -->
    <ca.six.mall.view.solar.PlanetView
        android:id="@+id/menuOrders"
        android:layout_width="80dp" android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
        app:planet_icon="@drawable/ic_my_order" app:planet_iconColor="#000"
        app:planet_text="My Orders" app:planet_textSize="15dp"
        />

    <ca.six.mall.view.solar.PlanetView
        android:id="@+id/menuTrack"
        android:layout_width="90dp" android:layout_height="80dp"
        app:planet_icon="@drawable/ic_track_order" app:planet_iconColor="#000"
        app:planet_text="Track Orders" app:planet_textSize="13dp"
        app:layout_constraintCircle="@id/menuOrders"
        app:layout_constraintCircleAngle="58"
        app:layout_constraintCircleRadius="140dp"
        />

    <ca.six.mall.view.solar.PlanetView
        android:id="@+id/menuCart"
        android:layout_width="75dp" android:layout_height="60dp"
        app:planet_icon="@drawable/ic_cart" app:planet_iconColor="#000"
        app:planet_text="Cart" app:planet_textSize="14dp"
        app:layout_constraintCircle="@id/menuOrders"
        app:layout_constraintCircleAngle="130"
        app:layout_constraintCircleRadius="130dp"
        />

    <ca.six.mall.view.solar.PlanetView
        android:id="@+id/menuFavorites"
        android:layout_width="95dp" android:layout_height="60dp"
        app:planet_icon="@drawable/ic_favorites" app:planet_iconColor="#000"
        app:planet_text="Saved For Later" app:planet_textSize="14dp"
        app:layout_constraintCircle="@id/menuOrders"
        app:layout_constraintCircleAngle="320"
        app:layout_constraintCircleRadius="120dp"
        />

    <ca.six.mall.view.solar.PlanetView
        android:id="@+id/menuVip"
        android:layout_width="95dp" android:layout_height="60dp"
        app:planet_icon="@drawable/ic_vip" app:planet_iconColor="#000"
        app:planet_text="Saved For Later" app:planet_textSize="14dp"
        app:layout_constraintCircle="@id/menuOrders"
        app:layout_constraintCircleAngle="243"
        app:layout_constraintCircleRadius="190dp"
        />

    <ca.six.mall.view.solar.PlanetView
        android:id="@+id/menuCoupon"
        android:layout_width="65dp" android:layout_height="50dp"
        app:planet_icon="@drawable/ic_coupon" app:planet_iconColor="#000"
        app:planet_text="My Coupon" app:planet_textSize="12dp"
        app:layout_constraintCircle="@id/menuOrders"
        app:layout_constraintCircleAngle="280"
        app:layout_constraintCircleRadius="160dp"
        />


    <!-- Recommendation -->


</android.support.constraint.ConstraintLayout>